<div class="container center-align">
  <img src="{{foundPost.imgUrl}}" style="width: 50%;">
  <p>{{foundPost.description}}</p>


  {{#each foundPost.comments}}
  <p> <b>@{{ this.user.username }}</b> {{ this.comments }}</p>
  {{/each}}


  <form action="/{{foundPost._id}}/comment" method="POST">

    <textarea name="comment" id="" cols="30" rows="2"></textarea>
    <br>
    <button type="submit">Create</button>

  </form>
</div>